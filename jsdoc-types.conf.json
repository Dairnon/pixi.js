{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "bundles",
            "packages"
        ],
        "excludePattern": "(node_modules|lib|dist|test)"
    },
    "plugins": [
        "./node_modules/jsdoc/plugins/markdown",
        "./node_modules/@pixi/jsdoc-template/plugins/es6-fix.js"
    ],
    "templates": {
    },
    "markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : false
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "private"       : true,
        "lenient"       : true,
        "destination"   : "./dist/types",
        "template"      :"./node_modules/tsd-jsdoc/dist"
    }
}
